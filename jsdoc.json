{
  "source": {
    "include": ["src", "package.json", "README.md", "examples"]
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "template": "node_modules/clean-jsdoc-theme",
    "destination": "./docs/",
    "recurse": true
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
